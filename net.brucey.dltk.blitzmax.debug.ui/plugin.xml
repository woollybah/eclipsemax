<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="net.brucey.dltk.blitzmax.debug.ui.ScriptDebugActionSet"
            label="%actionSet.label.blitzmaxDebugger"
            visible="true">
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.debug.ui.category.run"
            description="%ActionDefinition.RunBlitzMaxApp.description"
            id="net.brucey.dltk.blitzmax.debug.ui.launchShortcut.run"
            name="%ActionDefinition.RunBlitzMaxApp.name">
      </command>
      <command
            categoryId="org.eclipse.debug.ui.category.run"
            description="%ActionDefinition.DebugBlitzMaxApp.description"
            id="net.brucey.dltk.blitzmax.debug.ui.launchShortcut.debug"
            name="%ActionDefinition.DebugBlitzMaxApp.name">
      </command>
      <command
            description="%showGlobalVarsCommand.name"
            id="net.brucey.dltk.blitzmax.debug.ui.commands.toggleGlobalVariables"
            name="%showGlobalVarsCommand.description">
      </command>
      <command
            description="%showClassVarsCommand.name"
            id="net.brucey.dltk.blitzmax.debug.ui.commands.toggleClassVariables"
            name="%showClassVarsCommand.description">
      </command>
      <command
            description="%showLocalVarsCommand.name"
            id="net.brucey.dltk.blitzmax.debug.ui.commands.toggleLocalVariables"
            name="%showLocalVarsCommand.description">
      </command>
      <command
            description="%showPreferencesCommand.description"
            id="net.brucey.dltk.blitzmax.debug.ui.commands.showPreferences"
            name="%showPreferencesCommand.name">
      </command>
   </extension>

	<extension point="org.eclipse.ui.bindings">
		<key
			commandId="net.brucey.dltk.blitzmax.debug.ui.launchShortcut.run"
			contextId="org.eclipse.ui.globalScope"
			schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
			sequence="M3+M2+X Z">
		</key>
		<key
			commandId="net.brucey.dltk.blitzmax.debug.ui.launchShortcut.debug"
			contextId="org.eclipse.ui.globalScope"
			schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
			sequence="M3+M2+D Z">
		</key>
	</extension>

	<extension point="org.eclipse.ui.preferencePages">
      <page 
        category="net.brucey.dltk.blitzmax.preferences"
		class="net.brucey.dltk.blitzmax.debug.ui.compilers.BlitzMaxCompilerPreferencePage"
		id="net.brucey.dltk.blitzmax.preferences.compilers"
		name="%BlitzMaxCompilersPreferencePage.name" />
  	  <page 
  	    category="net.brucey.dltk.blitzmax.preferences"
		class="net.brucey.dltk.blitzmax.debug.ui.preferences.BlitzMaxDebugPreferencePage"
		id="net.brucey.dltk.blitzmax.preferences.debug" 
		name="%BlitzMaxDebugPreferencePage.name" />
	  <page
	    category="net.brucey.dltk.blitzmax.preferences.debug"
	    class="net.brucey.dltk.blitzmax.debug.ui.preferences.BlitzMaxDebuggingEnginePreferencePage"
	    id="net.brucey.dltk.blitzmax.preferences.debug.engines"
	    name="%BlitzMaxDebuggingEnginePreferencePage.name" />
      <page
        category="net.brucey.dltk.blitzmax.preferences.debug"
        class="org.eclipse.dltk.debug.ui.preferences.ScriptStepFilterPreferencePage:org.eclipse.dltk.blitzmax.core.nature"
        id="net.brucey.dltk.blitzmax.debug.ui.stepfilter"
        name="%BlitzMaxStepFiltersPreferencePage.name" />
      <page
        category="net.brucey.dltk.blitzmax.preferences.debug"
        class="org.eclipse.dltk.debug.ui.preferences.ScriptDetailFormattersPreferencePage:org.eclipse.dltk.blitzmax.core.nature"
        id="net.brucey.dltk.blitzmax.preferences.debug.detailFormatters"
        name="%BlitzMaxDetailFormattersPreferencePage.name" />    
	</extension>

    <extension point="org.eclipse.ui.propertyPages">
      <page
        class="net.brucey.dltk.blitzmax.debug.ui.preferences.BlitzMaxDebugPreferencePage"
        category="net.brucey.dltk.blitzmax.propertyPage"
        id="net.brucey.dltk.blitzmax.propertyPage.debug"
        name="%Debug.PropertyPage">
        <enabledWhen>
          <adapt type="org.eclipse.core.resources.IProject">
            <test property="org.eclipse.core.resources.projectNature" value="net.brucey.dltk.blitzmax.core.nature"/>
          </adapt>         
        </enabledWhen>
      </page>    
      <page
        class="net.brucey.dltk.blitzmax.debug.ui.preferences.BlitzMaxDebuggingEnginePreferencePage"
        category="net.brucey.dltk.blitzmax.propertyPage.debug"
        id="net.brucey.dltk.blitzmax.propertyPage.debug.engines"
        name="%Engines.PropertyPage">
        <enabledWhen>
          <adapt type="org.eclipse.core.resources.IProject">
            <test property="org.eclipse.core.resources.projectNature" value="net.brucey.dltk.blitzmax.core.nature"/>
          </adapt>         
        </enabledWhen>
      </page> 
    </extension>
    <extension
          point="org.eclipse.debug.ui.launchShortcuts">
       <shortcut
             class="net.brucey.dltk.blitzmax.debug.ui.launcher.BlitzMaxLaunchShortcut"
             description="%BlitzMaxLaunchShortcut.description"
             id="net.brucey.dltk.blitzmax.debug.ui.launchShortcut"
             label="%BlitzMaxLaunchShortcut.name"
             modes="run, debug">
       </shortcut>
    </extension>
    <extension
          point="org.eclipse.core.runtime.adapters">
       <factory
             adaptableType="net.brucey.dltk.blitzmax.debug.ui.editor.BlitzMaxEditor"
             class="net.brucey.dltk.blitzmax.debug.ui.BlitzMaxEditorAdapterFactory">
          <adapter
                type="org.eclipse.debug.ui.actions.IToggleBreakpointsTarget">
          </adapter>
          <adapter
                type="org.eclipse.debug.ui.actions.IRunToLineTarget">
          </adapter>
       </factory>
    </extension>
    <extension
          point="org.eclipse.ui.menus">
       <menuContribution
             locationURI="menu:org.eclipse.debug.ui.VariableView">
          <menu
                id="net.brucey.dltk.blitzmax.debug.ui.menu.VariableView"
                label="%variablesViewMenu.name">
          </menu>
       </menuContribution>
       <menuContribution
             locationURI="menu:net.brucey.dltk.blitzmax.debug.ui.menu.VariableView">
          <command
                commandId="net.brucey.dltk.blitzmax.debug.ui.commands.toggleGlobalVariables"
                style="toggle"
                tooltip="%showGlobalVarsCommand.tooltip">
          </command>
          <command
                commandId="net.brucey.dltk.blitzmax.debug.ui.commands.toggleTypeVariables"
                style="toggle"
                tooltip="%showTypeVarsCommand.tooltip">
          </command>
          <command
                commandId="net.brucey.dltk.blitzmax.debug.ui.commands.toggleLocalVariables"
                style="toggle"
                tooltip="%showLocalVarsCommand.tooltip">
          </command>
          <command
                commandId="net.brucey.dltk.blitzmax.debug.ui.commands.showPreferences">
          </command>
       </menuContribution>
    </extension>
    <extension
          point="org.eclipse.ui.handlers">
       <handler
             class="net.brucey.dltk.blitzmax.debug.ui.handlers.ToggleGlobalVariablesHandler"
             commandId="net.brucey.dltk.blitzmax.debug.ui.commands.toggleGlobalVariables">
       </handler>
       <handler
             class="net.brucey.dltk.blitzmax.debug.ui.handlers.ToggleTypeVariablesHandler"
             commandId="net.brucey.dltk.blitzmax.debug.ui.commands.toggleTypeVariables">
       </handler>
       <handler
             class="net.brucey.dltk.blitzmax.internal.debug.ui.handlers.ToggleLocalVariablesHandler"
             commandId="net.brucey.dltk.blitzmax.debug.ui.commands.toggleLocalVariables">
       </handler>
       <handler
             class="org.eclipse.dltk.debug.ui.handlers.VariablesViewOptionsHandler:org.eclipse.dltk.ruby.core.nature"
             commandId="net.brucey.dltk.blitzmax.debug.ui.commands.showPreferences">
       </handler>
    </extension>
    <extension
          point="org.eclipse.core.runtime.preferences">
       <initializer
             class="net.brucey.dltk.blitzmax.debug.ui.BlitzMaxDebugUIPreferenceInitializer">
       </initializer>
    </extension>
    <extension
          point="org.eclipse.dltk.debug.ui.language">
       <language
             class="net.brucey.dltk.blitzmax.debug.ui.BlitzMaxDebugUILanguageToolkit"
             nature="net.brucey.dltk.blitzmax.core.nature">
       </language>
    </extension>
    <extension
          point="org.eclipse.debug.ui.launchConfigurationTypeImages">
       <launchConfigurationTypeImage
             configTypeID="net.brucey.dltk.blitzmax.launching.BlitzMaxLaunchConfigurationType"
             icon="icons/obj16/blitzmax_obj.gif"
             id="net.brucey.dltk.blitzmax.debug.ui.launchConfigurationTypeImage">
       </launchConfigurationTypeImage>
    </extension>
    <extension
          point="org.eclipse.debug.ui.launchConfigurationTabGroups">
       <launchConfigurationTabGroup
             class="net.brucey.dltk.blitzmax.debug.ui.launchConfigurations.BlitzMaxTabGroup"
             id="net.brucey.dltk.blitzmax.debug.ui.BlitzMaxTabGroup"
             type="net.brucey.dltk.blitzmax.launching.BlitzMaxLaunchConfigurationType">
       </launchConfigurationTabGroup>
    </extension>


</plugin>
